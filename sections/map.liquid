      },
      {
        "type": "select",
        "id": "map_style",
        "label": "Map style",
        "default": "silver",
        "options": [
          {
            "label": "Default",
            "value": "default"
          },
          {
            "label": "Silver",
            "value": "silver"
          },
          {
            "label": "Retro",
            "value": "retro"
          },
          {
            "label": "Dark",
            "value": "dark"
          },
          {
            "label": "Night",
            "value": "night"
          },
          {
            "label": "Aubergine",
            "value": "aubergine"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Placeholder image",
        "info": "To display if there is no map key"
      }
    ],
    "presets": [
      {
        "name": "Map"
      }
    ]
  }
{% endschema %}
